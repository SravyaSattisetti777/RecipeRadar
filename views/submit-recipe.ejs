<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold" style="color: green; font-family: Agbalumo;">Share Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Share your culinary masterpieces with a global community of web developersâ€”start by filling out our form!</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="email" class="form-label fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Email:</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="enter your email(optional)">
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Recipe Name:</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="enter the recipe name..." required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Cooking Instructions:</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4" placeholder="enter cooking instructions..."></textarea>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Ingredients:</label><br>
            <div class="ingredientList">
              <div class="ingredeintDiv mb-1">
                <input type="text" name="ingredients" class="form-control" placeholder="enter ingredient...">
              </div>
            </div>
          </div>
  
          <div class="col-12">
            <button type="button" class="btn btn-outline-success" id="addIngredientsBtn">+ Ingredient</button>
          </div>
  
          <div class="col-12">
            <label for="category" class="fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category">
              <option selected>Select Category</option>
              <option value="Thai">Thai</option>
              <option value="American">American</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Indian">Indian</option>
              <option value="Spanish">Spanish</option>
              <option value="Italian">Italian</option>
              <option value="Turkish">Turkish</option>
              <option value="California">Californian</option>
              <option value="Greece">Greece</option>
              <option value="Israel">Israelian</option>
              <option value="African">African</option>
              <option value="Australia">Australian</option>
              <option value="Japanese">Japanese</option>
              <option value="Canadian">Canadian</option>
              <option value="Germany">Germany</option>
              <option value="French">French</option>
              <option value="Britain">Britain</option>
              <option value="Russian">Russian</option>
              <option value="Indonesian">Indonesian</option>
              <option value="Brazilian">Brazilian</option>
              <option value="Argentinian">Argentinian</option>
              <option value="Kazakhstani">Kazakhstani</option>
              <option value="Afghanistan">Afghanistan</option>
              <option value="Malaysian">Malaysian</option>
              <option value="Belgium">Belgium</option>
              <option value="Algerian">Algerian</option>
              <option value="Bangladesh">Bangladesh</option>
              <option value="Iranian">Iranian</option>
              <option value="United Arab Emirates">United Arab Emirates</option>
              <option value="Pakistani">Pakistani</option>
            </select>
          </div>
  
          <div class="col-12">
            <label for="image" class="fw-bold" style="font-size: 23px; color: rgb(231, 93, 43);">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
  
          <div class="col-12 text-center" style="margin-top: 50px;">
            <button type="submit" class="btn btn-success" style="font-weight: bolder; font-size: 20px;">Share Recipe</button>
          </div>          
  
        </div>
      
      </form>
  
    </div>
  </div>